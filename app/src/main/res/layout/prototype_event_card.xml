<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvContact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:background="#A8AAED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="78dp"
                android:fontFamily="sans-serif-black"
                android:text="Pedido No 2100"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imvEventCreator"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imvEventCreator"
                android:layout_width="75dp"
                android:layout_height="61dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="252dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imvEventPhoto"
            android:layout_width="188dp"
            android:layout_height="141dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:srcCompat="@drawable/ocy" />

        <TextView
            android:id="@+id/tvDestiny"
            android:layout_width="92dp"
            android:layout_height="21dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="24dp"
            android:text="Sapolio"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/tvSeats"
            android:layout_width="92dp"
            android:layout_height="25dp"
            android:layout_marginTop="40dp"
            android:text="80"
            app:layout_constraintEnd_toEndOf="@+id/tvDestiny"
            app:layout_constraintStart_toStartOf="@+id/tvDestiny"
            app:layout_constraintTop_toBottomOf="@+id/tvDestiny" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="91dp"
            android:layout_height="17dp"
            android:layout_marginTop="32dp"
            android:text=" S/. 60.00"
            app:layout_constraintEnd_toEndOf="@+id/tvSeats"
            app:layout_constraintStart_toStartOf="@+id/tvSeats"
            app:layout_constraintTop_toBottomOf="@+id/tvSeats" />

        <TextView
            android:id="@+id/tvDepartureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="125dp"
            android:text="23-23-23"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/btKnowMore"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <Button
            android:id="@+id/btKnowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:text="Saber mas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:text="Producto:"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvDestiny"
            app:layout_constraintStart_toEndOf="@+id/imvEventPhoto"
            app:layout_constraintTop_toTopOf="@+id/tvDestiny" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:text="Cantidad"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvSeats"
            app:layout_constraintStart_toEndOf="@+id/imvEventPhoto"
            app:layout_constraintTop_toTopOf="@+id/tvSeats" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginStart="15dp"
            android:text="Precio:"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvDate"
            app:layout_constraintStart_toEndOf="@+id/imvEventPhoto"
            app:layout_constraintTop_toTopOf="@+id/tvDate" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="36dp"
            android:text="Fecha:"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imvEventPhoto" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>